@model IEnumerable<MilitaryCollege.Models.Officer>
<table class="dataTable table-striped table-bordered mb-3 mt-2" style="width:100%">
    <thead>
        <tr>
            <th>
                الاسم و الشهرة
            </th>
            <th>
                ملاحظات آمر الدورة
            </th>
            
        </tr>
       
    </thead>
    <tbody>
        @foreach (var officer in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(model => officer.Name)</b>
                </td>
                <td>
                    @Html.DisplayFor(model => officer.Notes)
                </td>
                
            </tr>
        }


    </tbody>
</table>

@section Styles
{
    <style>
        table.dataTable td, table.dataTable th {
            text-align: center;
            vertical-align: middle !important;
        }

        thead {
            height: 100px;
            font-size: 1.5em;
        }
    </style>

}